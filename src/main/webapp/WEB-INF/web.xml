<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
  version="3.1">

  <servlet>
    <servlet-name>DepartmentListServlet</servlet-name>
    <servlet-class>kr.co.mz.tutorial.servlet.DepartmentListServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DepartmentListServlet</servlet-name>
    <url-pattern>/departmentList</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>HomeServlet</servlet-name>
    <servlet-class>kr.co.mz.tutorial.servlet.HomeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HomeServlet</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>FindOneDepartment</servlet-name>
    <servlet-class>kr.co.mz.tutorial.servlet.FindOneDepartment</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FindOneDepartment</servlet-name>
    <url-pattern>/findOneDepartment</url-pattern>
  </servlet-mapping>


  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>kr.co.mz.tutorial.servlet.filter.EncodingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <listener>
    <listener-class>kr.co.mz.tutorial.listener.HikariCPListener</listener-class>
  </listener>
  <listener>
    <listener-class>kr.co.mz.tutorial.listener.QueryManagerListener</listener-class>
  </listener>

</web-app>
